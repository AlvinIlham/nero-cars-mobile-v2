{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app/**/*",
    "lib/**/*",
    "store/**/*",
    "types/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": ["node_modules", "**/node_modules/**"]
}
